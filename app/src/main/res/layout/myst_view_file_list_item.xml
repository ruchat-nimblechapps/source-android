<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/myst_button_edit"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/myst_list_item_icon_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myst_text_view_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/myst_text_black"/>

        <TextView
            android:id="@+id/myst_text_view_modfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/myst_text_grey"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/myst_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/myst_list_item_icon_margin"
        android:padding="@dimen/myst_list_item_icon_padding"
        android:src="@drawable/myst_icon_delete"/>

    <ImageView
        android:id="@+id/myst_button_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/myst_button_delete"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/myst_list_item_icon_margin"
        android:padding="@dimen/myst_list_item_icon_padding"
        android:src="@drawable/myst_icon_email"/>

    <ImageView
        android:id="@+id/myst_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/myst_button_email"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/myst_list_item_icon_margin"
        android:padding="@dimen/myst_list_item_icon_padding"
        android:src="@drawable/myst_icon_edit"/>

</RelativeLayout>